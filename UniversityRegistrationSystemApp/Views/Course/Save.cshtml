@using UniversityRegistrationSystemApp.Manager
@using UniversityRegistrationSystemApp.Model
@model Course
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    List<Department> DepartmentList = ViewBag.DepartmentList;
    List<Semester> SemesterList = ViewBag.SemesterList;
    
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Course</title>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/StyleSheet1.css" rel="stylesheet"/>

    <style>
        #Save label.error {
            margin-left: 10px;
            width: auto;
            display: inline;
            color: red;
        }
    </style>
</head>

<body>

    <div class="center"><h3>Course Save</h3></div>
<form id="Save" method="POST">
    <table class="center1">
        <tr>
            <td><label for="Code">Code</label></td>
            <td><input id="Code" name="Code" type="text"/>
                @Html.ValidationMessageFor(x => x.Code)
            </td>
        </tr>
        <tr>
            <td><label for="Name">Name</label></td>
            <td><input id="Name" name="Name" type="text"/>
                @Html.ValidationMessageFor(x => x.Name)
            </td>
        </tr>
        <tr>
            <td><label for="Credit">Credit</label></td>
            <td><input id="Credit" name="Credit" type="text"/>
                @Html.ValidationMessageFor(x => x.Credit)
            </td>
        </tr>
        <tr>
            <td><label for="Description">Description</label></td>
            <td><input id="Description" name="Description" type="text"/>
                @Html.ValidationMessageFor(x => x.Description)
            </td>
        </tr>
        <tr>
            <td><label for="DepartmentId">DepartmentId</label></td>
            <td><select id="DepartmentId" name="DepartmentId">
                    <option value="">Department</option>
                    @foreach (Department department in DepartmentList)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.DepartmentId)
            </td>
        </tr>
        <tr>
            <td><label for="SemesterId">SemesterId</label></td>
            <td>
                <select id="SemesterId" name="SemesterId">
                    <option value="">---SELECT---</option>
                    @foreach (Semester semester in SemesterList)
                    {
                        <option value="@semester.Id">@semester.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.SemesterId)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit"/></td>
        </tr>
    </table>
    @if (ViewBag.Message != null)
    {
        <h3>@ViewBag.Message</h3>
    }
</form>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $("#Save").validate({
            rules: {
                Code: {
                    required: true
                },
                Name: {
                    required: true
                },
                Credit: {
                    required: true
                },
                Description: {
                    required: true
                },

                DepartmentId: {
                    required: true
                },

                SemesterId: {
                    required: true
                }



            },

            messages: {
                Code: "Please enter Code",
                Name: "Please enter Name",
                Credit: "Please enter Credit",
                Description: "Please enter Description",
                DepartmentId: "Please enter Department",
                SemesterId: "Please enter Semester"
            }

        });

    </script>


</body>

</html>

